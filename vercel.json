{
  "version": 3,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "static/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "^/$", "dest": "/static/dashboard.html" },
    { "src": "^/(.*)$", "dest": "/static/$1" }
  ]
}
